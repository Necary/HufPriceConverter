{
  "manifest_version": 3,
  "name": "HUF Price Converter",
  "version": "0.1",
  "description": "Converts HUF prices on selected sites.",
  "permissions": [
  "storage"
  ],
  "action": {
  "default_popup": "popup.html"
	},
  "content_scripts": [
    {
      "matches": [
        "https://iponcomp.com/*",
        "https://ipon.hu/*",
		"https://iponcomp.hr/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
	"16": "icon.png",
    "48": "icon.png",
	"128": "icon.png"
  }
}
